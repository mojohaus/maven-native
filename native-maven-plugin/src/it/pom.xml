<project>

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.codehaus.mojo</groupId>
    <artifactId>mojo-parent</artifactId>
    <version>40</version>
  </parent>

  <groupId>org.codehaus.mojo.natives.it</groupId>
  <artifactId>it-parent</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>Maven Native Plugin IT Parent</name>

  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>


  <modules>
    <module>jni</module>
    <module>linkages</module>
    <module>staticlib</module>
  </modules>

  <properties>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>native-maven-plugin</artifactId>
          <version>1.0-alpha-10-SNAPSHOT</version>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>build-helper-maven-plugin</artifactId>
          <version>3.0.0</version>
        </plugin>

        <plugin>
          <groupId>org.eclipse.m2e</groupId>
          <artifactId>lifecycle-mapping</artifactId>
          <version>1.0.0</version>
          <configuration>
            <lifecycleMappingMetadata>
              <pluginExecutions>
                <pluginExecution>
                  <pluginExecutionFilter>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>native-maven-plugin</artifactId>
                    <versionRange>[0,)</versionRange>
                    <goals>
                      <goal>initialize</goal>
                      <goal>javah</goal>
                      <goal>unzipinc</goal>
                      <goal>manifest</goal>
                      <goal>compile</goal>
                      <goal>resource-compile</goal>
                      <goal>link</goal>
                    </goals>
                  </pluginExecutionFilter>
                  <action>
                    <execute>
                      <runOnIncremental>false</runOnIncremental>
                    </execute>
                    <!-->ignore></ignore -->
                  </action>
                </pluginExecution>
              </pluginExecutions>
            </lifecycleMappingMetadata>
          </configuration>
        </plugin>


      </plugins>
    </pluginManagement>
  </build>

  <profiles>
    <profile>
      <id>msvc-2013</id>
      <activation>
        <property>
          <name>env.VS120COMNTOOLS</name>
        </property>
      </activation>
      <properties>
        <msvc.env.factory>org.codehaus.mojo.natives.msvc.MSVC2013x86AMD64EnvFactory</msvc.env.factory>
      </properties>
    </profile>
    <profile>
      <id>msvc-2012</id>
      <activation>
        <property>
          <name>env.VS110COMNTOOLS</name>
        </property>
      </activation>
      <properties>
        <msvc.env.factory>org.codehaus.mojo.natives.msvc.MSVC2012x86AMD64EnvFactory</msvc.env.factory>
      </properties>
    </profile>
    <profile>
      <id>msvc-2010</id>
      <activation>
        <property>
          <name>env.VS100COMNTOOLS</name>
        </property>
      </activation>
      <properties>
        <msvc.env.factory>org.codehaus.mojo.natives.msvc.MSVC2010x86AMD64EnvFactory</msvc.env.factory>
      </properties>
    </profile>
    <profile>
      <id>msvc-2008</id>
      <activation>
        <property>
          <name>env.VS90COMNTOOLS</name>
        </property>
      </activation>
      <properties>
        <msvc.env.factory>org.codehaus.mojo.natives.msvc.MSVC2008x86AMD64EnvFactory</msvc.env.factory>
      </properties>
    </profile>


  </profiles>

</project>
